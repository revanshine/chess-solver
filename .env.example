# Environment variables for Codex Template
# Copy this file to .env.local and customize for your environment

# Basic app settings
APP_NAME="Codex Template"
DEBUG=true
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000

# Security (REQUIRED)
SECRET_KEY=your-secret-key-here-change-this-in-production

# Database
DATABASE_URL=sqlite:///./codex_template.db
# DATABASE_URL=postgresql://user:password@localhost/codex_template

# Redis
REDIS_URL=redis://localhost:6379

# CORS origins (comma-separated)
CORS_ORIGINS=*

# JWT settings
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature flags
ENABLE_DOCS=true
ENABLE_METRICS=true

# External service URLs
# API_BASE_URL=https://api.example.com
# WEBHOOK_URL=https://webhook.example.com
